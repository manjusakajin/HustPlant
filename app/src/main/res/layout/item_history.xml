<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#adefefef"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eceaeb"
        >
    <LinearLayout
        android:elevation="10dp"
        android:background="@drawable/myrect"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="29 Mar 2018"
            android:textColor="#696969"
            android:textSize="20dp" />

    <TextView
        android:layout_height="7dp"
        android:layout_width="match_parent"
        android:text="______________________________________________________________"
        android:gravity="right"
        android:textSize="5dp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_begin"/>

        <TextView
            android:id="@+id/begin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:text="Nhà hiệu bộ"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_end"/>

        <TextView
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:text="Oak on Road 1"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location"/>

        <TextView
            android:id="@+id/totalRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Total routes : 500 m"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

